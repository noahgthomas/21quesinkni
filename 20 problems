			System.out.println();
			System.out.println("Your cookie is a MOLASSES COOKIE.");
			System.out.println();
			System.out.println(
					"Who thinks of this as their cookie? Either you're just trying all the options, or I got your cookie wrong, lol.");
			System.out.println();
			System.out.println(
					"Anyway, the game is over. Press Ctrl+F11 again if you want to prolong both yours and mine suffering.");
		} else {
			System.out.println();
			System.out.println("Wowie! It's a SNICKERDOODLE, don't try saying snicker ten times fast.");
			System.out.println();
			System.out.println(
					"Cinnamon and sugar, you won the game, or rather, I won the game. Press Ctrl+F11 to play again, witch.");
		}
	}

	public static void chunkyEnd(boolean trueOrFalse) {
		if (trueOrFalse) {
			Answer oatmealRaisin = new Answer("Oatmeal Raisin Cookie", true, true, true);
			System.out.println();
			System.out.println("Your cookie is an " + oatmealRaisin.name.toUpperCase() + " you absolute weirdhole.");
			System.out.println();
			System.out.println("The end. Press Ctrl+F11 to play again.");
		} else {
			System.out.println();
			System.out.println("I should hope not, is your cookie full of chocolaty goodness?");
			Scanner charScan = new Scanner(System.in);
			char answer = (charScan.next().charAt(0));
			System.out.println();
			System.out.println("Of course it is!");
			System.out.println();
			System.out.println("Your cookie is a Chocolate Chip Cookie. Thas the best one.");
			System.out.println();
			System.out.println("The end. Press Ctrl+F11 to play again.");
		}
	}

	public static void introText() throws AWTException {
		System.out.println("Think of a type of cookie!");
		System.out.println("Think of GENERIC cookie types, not specific brands like Girlscouts, Oreos, etc.");
		System.out.println("More like, 'chocolate chip.'");
		System.out.println("Then, answer Y or N to the questions below about your cookie.");
		Scanner stringScan = new Scanner(System.in);
		System.out.println("Press Enter to continue.");
		String input = (stringScan.nextLine());
		System.out.println();
		System.out.println("First Question:");
		System.out.println();
		System.out.println("Is the cookie a flat circle (not weird shapes or multiple layers)?");
		System.out.println();
		System.out.println("(Answer Y/N)");
		Robot robot = new Robot();
		robot.keyPress(KeyEvent.VK_DOWN);
		robot.keyRelease(KeyEvent.VK_DOWN);
		robot.keyPress(KeyEvent.VK_DOWN);
		robot.keyRelease(KeyEvent.VK_DOWN);
		robot.keyPress(KeyEvent.VK_DOWN);
		robot.keyRelease(KeyEvent.VK_DOWN);
		robot.keyPress(KeyEvent.VK_DOWN);
		robot.keyRelease(KeyEvent.VK_DOWN);
		robot.keyPress(KeyEvent.VK_DOWN);
		robot.keyRelease(KeyEvent.VK_DOWN);
		robot.keyPress(KeyEvent.VK_DOWN);
		robot.keyRelease(KeyEvent.VK_DOWN);
	}
