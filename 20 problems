		}

	}

	public static boolean checkAnswer() {
		Scanner charScan = new Scanner(System.in);
		char answer = (charScan.next().charAt(0));
		answer = Character.toLowerCase(answer);
		if (answer == 'y') {
			trueOrFalse = true;
		} else {
			if (answer == 'n') {
				trueOrFalse = false;
			}
		}
		return trueOrFalse;
	}

	public static void itsChunky(boolean trueOrFalse) {
		if (trueOrFalse) {
			System.out.println();
			System.out.println("Let's get chunky baby.");
			System.out.println();
			System.out.println("Hello, is your cookie the most hated and also deceptive cookie of all time?");
			chunkyEnd(checkAnswer());
		} else {
			itsSpicy();
		}
	}

	public static void itsSpicy() {
		System.out.println();
		System.out.println("Alrighty-then, is this sucker got spices all up upon it?");
		System.out.println();
		System.out.println("(Answer Y/N)");
		if (checkAnswer()) {
			stickyEnd();
		} else {
			System.out.println("Drumroll please...");
			System.out.println("");
			System.out.println("..................");
			System.out.println("brrrrrrrrrrrrrrrrr");
			System.out.println("You thought of a SUGAR COOKIE.");
			System.out.println("It's a frickin' surgar corkie.");
			System.out.println("The end. Press Ctrl+F11 to play again.");
		}
	}

	public static void stickyEnd() {
		System.out.println();
		System.out.println("Last question now. Is it like, low-key sticky?");
		System.out.println();
		System.out.println("(Answer Y/N)");
		System.out.println();
