		System.out.println();
		System.out.println("(Answer YES OR NO, FORGET USING JUST Y AND N, REBELLLLLLLLLL! REBELLLLLLLLL!)");
		if (checkAnswer()) {
			isSageWisdom();
		} else {
			isDryandDisgusting();
		}
	}

	public static void isSageWisdom() {
		System.out.println();
		System.out.println("Final Q and we'll give you your A, bae.");
		System.out.println();
		System.out.println("Does your cookie contain sage wisdom of the ages?");
