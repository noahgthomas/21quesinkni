	Answer(String name, boolean simpleCircle, boolean doesContainChunks, boolean isMostHated) {
		this.name = name;
		this.simpleCircle = simpleCircle;
		this.doesContainChunks = doesContainChunks;
		this.isMostHated = isMostHated; // end
	}

	public static void main(String[] args) throws AWTException {
		introText();

		if (checkAnswer()) {
			System.out.println();
			System.out.println("Wow, now I know exactly what the frick it is.");
			System.out.println();
			System.out.println("Does the cookie contain chunks of crap? (Answer Y/N)");

			trueOrFalse = checkAnswer();
			itsChunky(trueOrFalse);
		} else {
			treeTwoIsSandwich();
		}
	}

	public static void treeTwoIsSandwich() {
		System.out.println();
		System.out.println("An unconventional cookie... Alright spamman, I can play two at that game.");
		System.out.println();
		System.out.println("Insert your answer to THIS riddle me this:");
		System.out.println();
		System.out.println(
				"Would ze cookie be readily considered a sandwich by a panel of cookie sandwich experts currently undertaking their residency in cookie sandwiching?");
		System.out.println();
		System.out.println("(Answer Y/N/y/n)");

		if (checkAnswer()) {
			isSandwichIsItFrench();
		} else {
		isNotSandwichIsItInception();
		}
	}

	public static void isNotSandwichIsItInception() {
		System.out.println();
