			System.out.println();
			System.out.println("Wii wii, bonjour ma dam.");
			System.out.println();
			System.out.println("Your cookie shares its name with a previous French president");
			System.out.println();
			System.out.println("The cookie you are thinking of is a MACARON.");
			System.out.println();
			System.out.println(
					"Alright Les Incompetens, click Ctrl+F11 to play again, this is the end of the road, pal.");
		} else {
			System.out.println();
			System.out.println("What's that treat");
			Scanner stringScan = new Scanner(System.in);
			System.out.println("Press Enter to continue.");
			String input = (stringScan.nextLine());
			System.out.println("That's good to eat?");
			System.out.println("Press Enter to continue.");
			stringScan.nextLine();
			System.out.println("That's oh so cold");
			System.out.println("Press Enter to continue.");
			stringScan.nextLine();
			System.out.println("And never gets old?");
			System.out.println("Press Enter to continue.");
